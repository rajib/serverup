<!doctype html>
<html>
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title><%= content_for?(:title) ? yield(:title) : "serverup?" %></title>
    <meta name="description" content=""/>
    <meta name="author" content=""/>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="header">
      <h1><a href="/">Serverup?</a></h1>   
    </div>
    <!-- <div id="search">
      <input type="text" placeholder="Search here..."><button type="submit" class="tip-right" title="" data-original-title="Search"><i class="icon-search icon-white"></i></button>
    </div> -->
    <div id="user-nav" class="navbar navbar-inverse">
        <ul class="nav btn-group" style="width: auto; margin: 0px;">
            <li class="btn btn-inverse">
              <%= link_to edit_user_registration_path do %>
                <i class="icon icon-user"></i> <span class="text">Profile</span>
              <% end %>
            </li>
            <li class="btn btn-inverse">
              <%= link_to destroy_user_session_path, method: 'delete' do %>
                <i class="icon icon-share-alt"></i> <span class="text">Logout</span>
              <% end %>
            </li>
        </ul>
    </div>
    <div id="sidebar">
      <ul style="display: block;">
        <li class="<%= nav_class(contacts_path, 'servers') %>">
          <a href="/"><i class="icon icon-home"></i> <span>Servers</span></a>
        </li>
        <li class="<%= nav_class(contacts_path) %>">
          <%= link_to contacts_path do %>
            <i class="icon icon-user"></i> <span>Contacts</span>
          <% end %>
        </li>
      </ul>
    </div>

    <div id="content">
      <div id="content-header" style="border-bottom: 1px solid rgba(155, 163, 184, 0.44)">
        <h1><%= yield(:page_header).blank? ? params[:controller].capitalize : yield(:page_header) %></h1>
      </div>
<!--  <div id="breadcrumb">
        <a href="/" title="" class="tip-bottom" data-original-title="Go to Home"><i class="icon-home"></i> Home</a>
        <a href="#" class="current"><%= params[:controller].capitalize %></a>
      </div> -->
      <div class="container-fluid">
        <!-- flash notice -->
        <%= render partial: 'layouts/messages' %>
        <!-- end of flash notice -->

        <div class="row-fluid">
          <div class="span12">
            <%= yield %>
          </div> 
        </div>
        
        <div class="row-fluid">
          <div id="footer" class="span12">
            Copyright © 2012· Indus Net Technologies. All Rights Reserved
          </div>
        </div>
      </div>
    </div>

  </body>
</html>