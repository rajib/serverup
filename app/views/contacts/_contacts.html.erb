<div class="widget-content nopadding">
    <table id="contacts_listing" class="data-table table table-striped table-hover">
        <thead>
      
        <tr>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Actions
            </th>
        </tr>
        </thead>
        <tbody>
      
            <% @contacts.each do |contact| %>
                <tr>
                    <td>
                        <%= contact.name %>
                    </td>
                    <td>
                        <%= contact.email %>
                    </td>
                    <td>
                        <%= link_to edit_contact_path(contact), 'data-toggle' =>"modal", 'data-target' =>"#contactModal", title: "edit" do  %>
                        <i class="icon-edit">
                        </i>
                        <% end %>
                        <%= link_to contact, method: :delete, remote: true, data: { confirm: 'Are you sure?' }, title: "destroy" do %>
                        <i class="icon-trash">
                        </i>
                        <% end %>
                    </td>
                </tr>
                <% end %>
        <tbody>
    </table>
                    
</div>
                  
<!-- Modal -->
<div id="contactModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="contactModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×
        </button>
        <h3 id="contactModalLabel">Modal header</h3>
    </div>
    <div class="modal-body">
        <p>Loading…</p>
    </div>
</div>