<% flash.each do |name, msg| %>
<div class="row-fluid">
  <div class="span12">
	  <div class="alert alert-<%= name == :notice ? "info" : "error" %>">
	    <a class="close" data-dismiss="alert">&#215;</a>
	    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
	  </div>  
  </div>
</div>
<% end %>